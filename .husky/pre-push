#!/bin/sh

# Auto-fix linting issues
echo "🔍 Auto-fixing linting issues..."
pnpm run lint:fix || echo "⚠️  Some linting issues remain but continuing..."

# Auto-format code
echo "✨ Auto-formatting code..."
pnpm run format || echo "⚠️  Formatting failed but continuing..."

# Add the fixed files to git
echo "📝 Adding formatted files to git..."
git add .

# Type check and build
echo "🏗️  Building project..."
pnpm run build || echo "⚠️  Build failed - please fix errors before pushing"
